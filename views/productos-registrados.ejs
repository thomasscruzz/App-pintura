<html>
    <style>
        ul,li{
            font-size: 50px;
        }
    </style>
    <body>
        <h1>Productos registrados en el almacen</h1>
        <ul>
            <% for (let i=0; i<productos.length ;i++) { %>
                <li>
                    <a href="/products/detail/<%= productos[i].id %>"><%= productos[i].name %></a>
                </li>
            <% } %>
        </ul>
        <h3>Search products</h3>
        <form action="/products/search" method="GET">
            <input type="text" name="busqueda">
            <input type="submit" value="Search">
        </form>
    </body>
</html>